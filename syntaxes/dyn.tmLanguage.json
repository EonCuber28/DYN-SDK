{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DYN",
  "scopeName": "source.dyn",
  "patterns": [
    {"include": "#comments"},
    {"include": "#keywords"},
    {"include": "#strings"},
    {"include": "#numbers"},
    {"include": "#operators"},
    {"include": "#variables"},
    {"include": "#functions"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dyn",
          "match": "//.*$"
        },
        {
          "name": "comment.block.dyn",
          "begin": "^\\s*'''",
          "end": "^\\s*'''",
          "contentName": "comment.block.content.dyn"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.dyn",
          "match": "\\b(if|while|for|start|end|as)\\b"
        },
        {
          "name": "keyword.declaration.dyn",
          "match": "\\b(def_path|autoPath|PathStartPosition)\\b"
        },
        {
          "name": "keyword.command.dyn",
          "match": "\\b(RUN|output2telem|cmd)\\b"
        },
        {
          "name": "keyword.variable.dyn",
          "match": "\\b(FieldCoord|FieldPos|Num|Bool|String|List|Json)\\b"
        },
        {
          "name": "keyword.math.dyn",
          "match": "\\b(Add|Sub|Mux|Div|Pow|Sqr|Sin|invSin|Cos|invCos|Tan|invTan|toRad|toDeg|ADD|SUB|COS|SIN)\\b"
        },
        {
          "name": "keyword.movement.dyn",
          "match": "\\b(turnTo|goTo|followBezier)\\b"
        },
        {
          "name": "constant.language.dyn",
          "match": "\\b(true|false|to|from)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.dyn",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dyn",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.dyn",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.dyn",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.dyn",
          "match": "(<|>|<=|>=|==|!=)"
        },
        {
          "name": "keyword.operator.arithmetic.dyn",
          "match": "(\\+|-|\\*|/)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.dyn",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.dyn",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        },
        {
          "name": "meta.function.call.dyn",
          "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": {"name": "entity.name.function.dyn"}
          },
          "end": "\\)",
          "patterns": [
            {"include": "$self"}
          ]
        }
      ]
    }
  }
}